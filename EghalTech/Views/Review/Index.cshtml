@model IPagedList<ReviewViewModel>
@{
    ViewData["Title"] = "My Reviews";
    Layout = null;
}
<head>
    <link rel="stylesheet" href="~/css/products-index.css">
    <link rel="stylesheet" href="~/css/delete-modal.css">
    <link rel="stylesheet" href="~/css/admin-navbar.css">
    <link rel="stylesheet" href="~/css/review-index.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
</head>
<partial name="_AdminNavbar" />

<!-- Reviews Banner -->
<div class="products-banner">
    <div class="container">
        <h1 class="products-title">Reviews</h1>
    </div>
</div>

<!-- Main Content -->
<div class="main-content">
    <div class="container">
        <!-- Action Bar -->
        <div class="action-bar">
            <div class="search-container">
                <input type="text" id="searchBox" placeholder="Search (Product Name, Review)" class="search-input" />
                <i class="bi bi-search search-icon"></i>
            </div>
        </div>

        <!-- Reviews Table -->
        <div class="table-container">
            <table class="products-table">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Rating</th>
                        <th>Review Text</th>
                        <th>Review Date</th>
                        <th colspan="2">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var review in Model)
                        {
                            <tr data-item-id="@review.Id">
                                <td class="product-name-cell">@review.ProductName</td>
                                <td>
                                    <div class="rating-display">
                                        <div class="stars">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                <i class="bi bi-star-fill @(i <= review.Rating ? "star" : "star empty")"></i>
                                            }
                                        </div>
                                        <span class="rating-text">@review.Rating/5</span>
                                    </div>
                                </td>
                                <td>
                                    <div class="review-text" id="review-@review.Id">
                                        @review.Comment
                                        @if (review.Comment?.Length > 50)
                                        {
                                            <button class="expand-btn" onclick="toggleReviewText(@review.Id)">
                                                Show more
                                            </button>
                                        }
                                    </div>
                                </td>
                                <td class="review-date">@review.CreatedAt.ToString("MMM dd, yyyy")</td>
                                <td class="actions">
                                    <a asp-controller="Store" asp-action="ProductDetails" asp-route-id="@review.ProductId" class="btn btn-details">
                                        View Product
                                    </a>
                                </td>
                                <td class="actions">
                                    <button type="button" class="btn btn-delete" onclick="showDeleteModal(@review.Id, '@review.ProductName')">
                                        Delete
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>

            @if (Model == null || !Model.Any())
            {
                <div class="no-products">
                    <i class="bi bi-star"></i>
                    <h3>No reviews found</h3>
                    <p>You haven't written any reviews yet. Start by purchasing products and sharing your experience.</p>
                    <a asp-action="Index" asp-controller="Store" class="btn btn-primary">
                        <i class="bi bi-shop"></i>
                        Browse Products
                    </a>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (Model?.PageCount > 1)
        {
            <div class="pagination-container">
                @Html.PagedListPager(Model, page =>
                Url.Action("Index", new { page, search = Context.Request.Query["search"] }),
                        new PagedListRenderOptions
                        {
                            Display = PagedListDisplayMode.IfNeeded,
                            DisplayLinkToFirstPage = PagedListDisplayMode.Always,
                            DisplayLinkToLastPage = PagedListDisplayMode.Always,
                            DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                            DisplayLinkToNextPage = PagedListDisplayMode.Always,
                            ClassToApplyToFirstListItemInPager = "page-item",
                            ClassToApplyToLastListItemInPager = "page-item",
                            ContainerDivClasses = new[] { "pagination-wrapper" },
                            UlElementClasses = new[] { "pagination" },
                            LiElementClasses = new[] { "page-item" },
                            PageClasses = new[] { "page-link" }
                        })
        </div>
                }
    </div>
</div>

<!-- Delete Modal -->
<div id="deleteModal" class="delete-modal">
    <div class="delete-modal-content">
        <div class="delete-modal-header">
            <h3>Confirm Delete</h3>
            <button type="button" class="delete-modal-close" onclick="closeDeleteModal()">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <line x1="18" y1="6" x2="6" y2="18" />
                    <line x1="6" y1="6" x2="18" y2="18" />
                </svg>
            </button>
        </div>
        <div class="delete-modal-body">
            <div class="delete-warning-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
                </svg>
            </div>
            <p>Are you sure you want to delete your review for <strong id="productNameToDelete"></strong>?</p>
            <p class="delete-warning">This action cannot be undone.</p>
        </div>
        <div class="delete-modal-footer">
            <button type="button" class="btn btn-secondary" onclick="closeDeleteModal()">Cancel</button>
            <button type="button" class="btn btn-delete" id="confirmDeleteBtn">Delete Review</button>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/admin-navbar.js"></script>
<script src="~/js/review-index.js"></script>
<script src="~/js/layout.js"></script>

<script>
    @if (TempData["SuccessMessage"] != null)
    {
            <text>
                showNotification("@TempData["SuccessMessage"]", "success");
            </text>
    }
    @if (TempData["ErrorMessage"] != null)
    {
            <text>
                showNotification("@TempData["ErrorMessage"]", "error");
            </text>
    }
</script>