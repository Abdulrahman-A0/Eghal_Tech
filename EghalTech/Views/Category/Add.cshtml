@model Category
@{
    ViewData["Title"] = "Add New Category - EghalTech Admin";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/admin-add-product.css">
</head>
<body>
    <!-- Header -->
    <header class="admin-header">
        <div class="container">
            <div class="header-content">
                <div class="header-left">
                    <a asp-action="Index" asp-controller="Category" class="back-link">
                        <svg class="back-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path d="m15 18-6-6 6-6" />
                        </svg>
                        Back to Dashboard
                    </a>
                </div>
                <div class="header-logo">
                    <span class="logo-red">Eghal</span><span class="logo-black">Tech</span> Admin
                </div>
            </div>
        </div>
    </header>

    <main class="main-content">
        <div class="container">
            <div class="page-header">
                <h1>Add New Category</h1>
                <p>Add a new tech Category to your inventory</p>
            </div>

            <form id="addProductForm" class="product-form" asp-action="Add" asp-controller="Category" method="post">
                @Html.AntiForgeryToken()

                <!-- Basic Information -->
                <div class="form-card">
                    <div class="card-header">
                        <h2>Basic Information</h2>
                        <p>Enter the basic details of your Category</p>
                    </div>
                    <div class="card-content">
                        <div class="form-group">
                            <label for="Name">Category Name *</label>
                            <input asp-for="Name" placeholder="e.g., Laptops">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Add Category</button>
                </div>
            </form>
        </div>
    </main>

    <script src="~/js/admin-add-product.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
