@model Product
@{
    ViewData["Title"] = "Edit Product - EghalTech Admin";
    Layout = null;
    SelectList categoryList = new SelectList(ViewBag.Categories, "Id", "Name", Model.CategoryId);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/admin-edit-product.css">
</head>
<body>
    <!-- Header -->
    <header class="admin-header">
        <div class="container">
            <div class="header-content">
                <div class="header-left">
                    <a asp-action="Index" asp-controller="Product" class="back-link">
                        <svg class="back-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path d="m15 18-6-6 6-6" />
                        </svg>
                        Back to Products
                    </a>
                </div>
                <div class="header-logo">
                    <span class="logo-red">Eghal</span><span class="logo-black">Tech</span> Admin
                </div>
            </div>
        </div>
    </header>

    <main class="main-content">
        <div class="container">
            <div class="page-header">
                <h1>Edit Product</h1>
                <p>Update the details of <strong>@Model.Name</strong></p>
            </div>

            <form id="editProductForm" class="product-form" asp-action="Edit" asp-controller="Product" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ImageUrl" />

                <!-- Basic Information -->
                <div class="form-card">
                    <div class="card-header">
                        <h2>Basic Information</h2>
                        <p>Update the basic details of your product</p>
                    </div>
                    <div class="card-content">
                        <div class="form-row">
                            <div class="form-group">
                                <label for="productName">Product Name *</label>
                                <input asp-for="Name" placeholder="e.g., iPhone 15 Pro Max">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="Brand">Brand *</label>
                                <input asp-for="Brand" placeholder="e.g., Apple">
                                <span asp-validation-for="Brand" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="Description">Description *</label>
                            <textarea asp-for="Description" placeholder="Detailed product description..." rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="CategoryId">Category *</label>
                                <select asp-for="CategoryId" asp-items="@categoryList">
                                    <option value="">Select category</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="Price">Price ($) *</label>
                                <input asp-for="Price" placeholder="999.99" step="0.01">
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="StockQuantity">Stock Quantity *</label>
                                <input asp-for="StockQuantity" placeholder="100">
                                <span asp-validation-for="StockQuantity" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Product Image -->
                <div class="form-card">
                    <div class="card-header">
                        <h2>Product Image</h2>
                        <p>Update the product image</p>
                        <span asp-validation-for="ImageUrl"></span>
                    </div>
                    <div class="card-content">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div class="current-image-section">
                                <label>Current Image:</label>
                                <div class="current-image-container" id="currentImageContainer">
                                    <img src="~/img/product/@Model.ImageUrl" alt="Current product image" class="current-image" id="currentImage">
                                    <div class="image-overlay">
                                        <button type="button" class="btn btn-danger btn-sm" onclick="removeCurrentImage()">
                                            <svg class="delete-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                                <path d="M3 6h18M19 6v14a2 2 0 01-2 2H7a2 2 0 01-2-2V6m3 0V4a2 2 0 012-2h4a2 2 0 012 2v2M10 11v6M14 11v6" />
                                            </svg>
                                            Remove
                                        </button>
                                    </div>
                                </div>
                                <input type="hidden" id="removeImage" name="RemoveImage" value="false">
                            </div>
                        }

                        <div class="image-upload-area" id="imageUploadArea">
                            <input asp-for="ImageUrl" type="file" id="imageUpload" name="Image" accept="image/*" style="display: none;" required>
                            <div class="upload-placeholder" onclick="document.getElementById('imageUpload').click()">
                                <svg class="upload-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4" />
                                    <polyline points="7,10 12,15 17,10" />
                                    <line x1="12" y1="15" x2="12" y2="3" />
                                </svg>
                                <p>Click to upload new image or drag and drop</p>
                                <small>PNG, JPG, WEBP up to 10MB</small>
                            </div>
                        </div>
                        <div id="imagePreview" class="single-image-preview"></div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="form-actions">
                    <a asp-action="Index" asp-controller="Product" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-primary">Update Product</button>
                </div>
            </form>
        </div>
    </main>

    <script src="~/js/admin-edit-product.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
